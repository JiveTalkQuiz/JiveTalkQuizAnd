        android:padding="0dp"
        android:fontFamily="@font/bm_hanna_pro"
        android:text="나의\n아재력\n테스트"
        android:textColor="#84aeb0"
        android:textSize="63dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:padding="0dp"
        android:fontFamily="@font/bm_hanna_pro"
        android:text="내가 아는\n신조어는\n몇 개?"
